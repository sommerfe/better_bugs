{
  "manifest_version": 3,
  "name": "Better Bugs",
  "author": "Felix Sommer",
  "version": "1.0.4",
  "description": "Better Bugs is a browser extension simplifying bug reporting by capturing network requests, screenshots, user comments, and more.",
  "icons": {
    "64": "res/icon.png"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "64": "res/icon.png"
    }
  },
  "permissions": ["activeTab", "downloads"],
  "devtools_page": "src/devtools.html",
  "host_permissions": ["*://*/*"],
  "web_accessible_resources": [
    {
      "resources": ["lib/jszip.min.js"],
      "matches": ["*://*/*"]
    }
  ]
}
